<li style="display: flex; align-items: center; gap: 1rem">
  {{#if logoUrl}}
    {{#if (gte @index 8)}}
      <img
        style="aspect-ratio: 1"
        width="128"
        height="128"
        src="{{logoUrl}}"
        alt=""
        loading="lazy"
      />
    {{else}}
      <img
        style="aspect-ratio: 1"
        width="128"
        height="128"
        src="{{logoUrl}}"
        alt=""
      />
    {{/if}}

  {{else}}
    <div style="width: 128px; height: 128px"></div>
  {{/if}}
  <div>
    <h3>
      <a href="{{url}}" rel="noreferrer noopener" target="_blank">{{title}}</a>

      <small>{{#if version}}{{ version }}{{/if}}</small>
    </h3>
    <p>{{summary}}</p>
  </div>
</li>
