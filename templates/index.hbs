<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="A packwiz minecraft modpack" />
    <meta name="generator" content="packwiz-renderer 0.1.0" />

    <title>{{pack.name}}</title>
  </head>
  <body>
    <main style="max-width: 960px; margin: 0 auto">

      <h1>{{pack.name}}</h1>

      <p>
        To install this modpack use packwiz, and point at this url with
        <a href="/pack.toml">pack.toml</a>
        at the end.
      </p>

      <div>

        <h2>Mods</h2>
        <ul
          style="display: flex; flex-direction: column; gap: 1rem; padding: 0"
        >
          {{#each mods}}

            <li style="display: flex; align-items: center; gap: 1rem">
              {{#if logoUrl}}
                {{#if (gte @index 8)}}
                  <img
                    style="aspect-ratio: 1"
                    width="128"
                    height="128"
                    src="{{logoUrl}}"
                    alt=""
                    loading="lazy"
                  />
                {{else}}
                  <img
                    style="aspect-ratio: 1"
                    width="128"
                    height="128"
                    src="{{logoUrl}}"
                    alt=""
                  />
                {{/if}}

              {{else}}
                <div style="width: 128px; height: 128px"></div>
              {{/if}}
              <div>
                <h3>
                  <a
                    href="{{url}}"
                    rel="noreferrer noopener"
                    target="_blank"
                  >{{title}}</a>

                  {{!-- <small>{{#with (lookup ../versions [id]) }} {{ version_number }} {{/with}}</small> --}}
                </h3>
                <p>{{summary}}</p>
              </div>

            </li>
          {{/each}}

        </ul>

        <h2>Resource Packs</h2>
        <ul
          style="display: flex; flex-direction: column; gap: 1rem; padding: 0"
        >
          {{#each resourcePacks}}

            <li style="display: flex; align-items: center; gap: 1rem">
              {{#if logoUrl}}

                <img
                  style="aspect-ratio: 1"
                  width="128"
                  height="128"
                  src="{{logoUrl}}"
                  alt=""
                />

              {{else}}
                <div style="width: 128px; height: 128px"></div>
              {{/if}}
              <div>
                <h3>
                  <a
                    href="{{url}}"
                    rel="noreferrer noopener"
                    target="_blank"
                  >{{title}}</a>

                  {{!-- <small>{{#with (lookup ../versions [id]) }} {{ version_number }} {{/with}}</small> --}}

                </h3>
                <p>{{summary}}</p>
              </div>

            </li>
          {{/each}}

        </ul>
      </div>
    </main>

  </body>
</html>
